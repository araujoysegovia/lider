<html>
	<head>
	</head>
	<body>
		<div style="width:100%; min-height:500px; overflow:hidden;">
			<div style="background-image: url('http://soylider.sifinca.net/image/541af09e6803fa2b158b45c1'); background-repeat: repeat-x; height: 40px;">
				<img style="width: 25px; float: left; margin-top: 2px; margin-left:10px;" src="http://soylider.sifinca.net/image/541af07b6803fa6f158b456b?width=30&height=30"/>
				<h2 style="margin-left:55px; line-height: 30px; color:white;">{{ title }}</h2>
			</div>
			<div style='padding: 0px 15px;'>
				{% if user %}
				    <div style='text-align: center;'>
						<img style='-webkit-border-radius: 100px; -moz-border-radius: 100px; border-radius: 100px; border: 1px solid #DDD;' src='http://soylider.sifinca.net/image/{{ user.image }}?width=200&height=200' />
						<h5>{{ user.name }} {{ user.lastname }}</h5>
					</div>
				{% endif %}
				<div>
					<h2>{{ subjectUser }}</h2>
				</div>
				<div style="margin-top: 10px;">
					{{ body|raw }}
				</div>
			</div>
			<div style="margin-top: 40px; background-image: url('http://soylider.sifinca.net/image/541af0c16803fa6c158b4589'); height: 25px; position:absolute; left: 0px; right: 0px; bottom: 35px;">
			</div>
		</div>
	</body>
</html>